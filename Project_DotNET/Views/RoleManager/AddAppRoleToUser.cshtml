@model Project_DotNET.Models.AddAppRoleToUserViewModel
@{ 
    ViewBag.Title = "Ajouter un rôle à un utilisateur";
}

<h2>@ViewBag.Title.</h2>

@using (Html.BeginForm("AddAppRoleToUser", "RoleManager", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Ajouter un rôle à un utilisateur.</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(m => m.SelectedUser, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.DropDownListFor(m => m.SelectedUser, new SelectList(Model.Users.Select(j => new SelectListItem() { Text = j.Id.ToString(), Value = j.Pseudo }), "Text", "Value", Model.Users.First().Id), "Sélectionnez l'utilisateur", new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.SelectedUser)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.SelectedAvailableRole, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.DropDownListFor(m => m.SelectedAvailableRole, new SelectList(Model.AvailableRoles.Select(sr => new SelectListItem() { Text = sr.AvailableRoleId.ToString(), Value = sr.AvailableRoleName + ", " + sr.AvailableRoleDesc }), "Text", "Value", Model.Users.Where(u=> u.Id == Model.SelectedUser) ), "Sélectionnez le  rôle", new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.SelectedAvailableRole)
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Affecter" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}






